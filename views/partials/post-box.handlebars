<div class="m-3" id="tech_blog_info">
    <div
        class="d-flex justify-content-between align-items-center custom-primary bg-brown px-3 py-1"
        style="flex-wrap: wrap">
        
        <a href="/post/{{id}}"><h6 class="text-brownish">{{title}}</h6></a>
        <p class="text-brownish">Posted by {{user.username}} on {{format_date date_created}}, {{comments.length}} comment(s)</p>
    </div>
    <p>
        {{!-- {{body}} --}}
        {{#each body }}
            <p class="para-text">{{this}}</p>
        {{/each}}
    </p>
</div>